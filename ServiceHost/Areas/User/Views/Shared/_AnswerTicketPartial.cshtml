@model EShop.Domain.DTOs.Contact.Ticket.AnswerTicketDto

<h5 class="mb-3">ارسال پیام</h5>
<form asp-area="User" asp-controller="Ticket" asp-action="AnswerTicket" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="review_text" class="form-label">پیام:</label>
        <textarea asp-for="Text" class="form-control form-control-rounded" ckeditor="1" rows="8" placeholder="پیام خود را وارد کنید..." required=""></textarea>
        <span class="text-danger" asp-validation-for="Text"></span>
    </div>
    <div class="text-right">
        <button class="btn py-3 px-5 main-color-one-bg" type="submit">
            ارسال
            پیام
        </button>
    </div>
</form>

