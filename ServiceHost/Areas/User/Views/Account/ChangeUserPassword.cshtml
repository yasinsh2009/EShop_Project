@model EShop.Domain.DTOs.Account.User.ChangeUserPasswordDto

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<section class="content my-xl-3 my-5 py-xl-4 py-5">
    <div class="container-fluid">
        <div class="row gy-3">
            <!-- side nav -->
            @await Component.InvokeAsync("UserSidebarDashboard")
            <!-- main content -->
            <div class="col-xl-9">
                <div class="section-title mb-3">
                    <div class="section-title-title">
                        <h2 class="fw-900 h4">
                            تغییر<span class="with-highlight ms-1">رمز عبور</span>
                        </h2>
                        <div class="Dottedsquare"></div>
                    </div>
                </div>
                <div class="slider-parent content-box rounded-3">
                    <div class="container-fluid">
                        <form asp-area="User" asp-controller="Account" asp-action="ChangeUserPassword" method="post">
                            <div class="row gy-2">
                                <div class="col-md-4">
                                    <div class="comment-item mb-3">
                                        <input type="password" class="form-control" asp-for="CurrentPassword">
                                        <label class="form-label label-float">
                                            رمز عبور فعلی
                                            <span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="CurrentPassword"></span>
                                </div>
                                <div class="col-md-4">
                                    <div class="comment-item mb-3">
                                        <input type="password" class="form-control" asp-for="NewPassword">
                                        <label class="form-label label-float">
                                            رمز عبور جدید
                                            <span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                                </div>
                                <div class="col-md-4">
                                    <div class="comment-item mb-3">
                                        <input type="password" class="form-control" asp-for="ConfirmNewPassword">
                                        <label class="form-label label-float">
                                            تکرار (تائید) رمز عبور جدید
                                            <span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
                                </div>
                                <div class="col-12">
                                    <input type="submit" value="تغییر" class="btn main-color-one-bg px-5 w-100-in-400 pt-2">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>