@using System.Reflection


@{
    ViewData["Title"] = "ورود";
}

<section class="content vh-100">
    <div class="container-fluid h-100">
        <div class="auth h-100 d-flex align-items-center">
            <div class="container-fluid">
                <div class="auth-items">
                    <div class="row justify-content-center">
                        <div class="col-lg-4">
                            <div class="auth-form shadow-xl rounded-3  mt-5 bg-white">
                                <div class="auth-form-title header-logo d-flex align-items-center justify-content-between title-panel mb-4 slider-title-desc-center">
                                    <h2 class="text-center h4 text-muted title-font">@ViewData["Title"]</h2>
                                    <a href="">
                                        <img src="assets/image/logo.png" class="auth-logo" alt="">
                                    </a>
                                </div>
                                <form id="form-auth" class="py-3" @* asp-controller="Account" asp-action="UserLogin" method="post" *@>
                                    <div class="alert text-center alert-success">
                                        لطفا کد شش رقمی ارسال شده به شماره همراه {@ViewBag.Mobile} را وارد کنید.
                                    </div>
                                    <div id="otp-input">
                                        <label>
                                            <input placeholder="_" type="number" step="1" min="0" max="9">
                                        </label>
                                        <label>
                                            <input placeholder="_" type="number" step="1" min="0" max="9">
                                        </label>
                                        <label>
                                            <input placeholder="_" type="number" step="1" min="0" max="9">
                                        </label>
                                        <label>
                                            <input placeholder="_" type="number" step="1" min="0" max="9">
                                        </label>
                                        <label>
                                            <input placeholder="_" type="number" step="1" min="0" max="9">
                                        </label>
                                        <label>
                                            <input placeholder="_" type="number" step="1" min="0" max="9">
                                        </label>
                                        <input id="otp-value" type="hidden" name="otp">
                                    </div>
                                    <!-- Countdown timer html -->
                                    <div class="countDownContainer">
                                        <div class="countdown-bar" id="countdownB">
                                            <div></div>
                                            <div></div>
                                        </div>
                                    </div>
                                    <div class="form-group mt-4">
                                        <button type="submit" id="submit" class="btn-login w-100 btn text-white rounded-3">
                                            وورد به
                                            سایت
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <p class="loginTermsDesc lh-lg mt-3">
                                با ورود و یا ثبت نام در آبتین شما <a class="underlined fw-bold" href="/rules/">
                                    شرایط و
                                    قوانین
                                </a> استفاده از سرویس‌های سایت آبتین و <a class="underlined fw-bold" href="/privacy-polices/">
                                    قوانین حریم
                                    خصوصی
                                </a> آن را می‌پذیرید.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
