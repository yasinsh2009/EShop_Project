@model EShop.Domain.DTOs.Account.User.RegisterUserDTO

@{
    ViewData["Title"] = "ثبت نام کاربر";
}

<section class="content vh-100">
    <div class="container-fluid h-100">
        <div class="auth h-100 d-flex align-items-center">
            <div class="container-fluid">
                <div class="auth-items">
                    <div class="row justify-content-center">
                        <div class="col-lg-4">
                            <div class="auth-form shadow-xl rounded-3  mt-5 bg-white">
                                <div class="auth-form-title header-logo d-flex align-items-center justify-content-between title-panel mb-4 slider-title-desc-center">
                                    <h2 class="text-center h4 text-muted title-font">ثبت نام</h2>
                                    <a href="">
                                        <img src="~/MainTemplate/assets/image/logo.png" class="auth-logo" alt="">
                                    </a>
                                </div>
                                <form id="form-auth" class="py-3" asp-controller="Account" asp-action="RegisterUser" method="post">
                                    <div class="comment-item mb-4">
                                        <input type="text" class="form-control" asp-for="FirstName">
                                        <label class="form-label label-float">نام</label>
                                    </div>
                                    <div class="comment-item mb-4">
                                        <input type="text" class="form-control" asp-for="LastName">
                                        <label class="form-label label-float">نام خانوادگی</label>
                                    </div>
                                    <div class="comment-item mb-3 step-username">
                                        <input type="number" class="form-control" asp-for="Email">
                                        <label class="form-label label-float">شماره همراه</label>
                                    </div>
                                    <div class="comment-item mb-4">
                                        <input type="email" class="form-control" asp-for="Email">
                                        <label class="form-label label-float">ایمیل (اختیاری)</label>
                                    </div>
                                    <div class="comment-item mb-4">
                                        <input type="password" class="form-control" asp-for="Password">
                                        <label class="form-label label-float">رمز عبور</label>
                                    </div>
                                    <div class="comment-item mb-4">
                                        <input type="password" class="form-control" asp-for="ConfirmPassword">
                                        <label class="form-label label-float">تکرار (تائید رمز عبور)</label>
                                    </div>
                                    ///
                                    <div class="text-center">
                                        <button class="btn main-color-two-bg text-white w-100 py-3">ثبت نام</button>
                                    </div>
                                    <div class="text-center">
                                        <a class="btn main-color-two-bg text-white w-100 py-3 mb-2" asp-controller="Account" asp-action="Login">حساب کاربری دارید؟ ورود</a>
                                    </div>
                                </form>

                            </div>
                            <p class="loginTermsDesc lh-lg mt-3">
                                با ورود و یا ثبت نام در فروشگاه تکنوسنتر شما <a class="underlined fw-bold" href="/rules/">
                                    شرایط و
                                    قوانین
                                </a> استفاده از سرویس‌های سایت فروشگاه تکنوسنتر و <a class="underlined fw-bold" href="/privacy-polices/">
                                    قوانین حریم
                                    خصوصی
                                </a> آن را می‌پذیرید.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>