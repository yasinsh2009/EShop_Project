@model EShop.Domain.DTOs.Account.User.UserLoginDTO

@{
    ViewData["Title"] = "ورود کاربر";
}

<section class="content vh-100">
    <div class="container-fluid h-100">
        <div class="auth h-100 d-flex align-items-center">
            <div class="container-fluid">
                <div class="auth-items">
                    <div class="row justify-content-center">
                        <div class="col-lg-4">
                            <div class="auth-form shadow-xl rounded-3  mt-5 bg-white">
                                <div class="auth-form-title header-logo d-flex align-items-center justify-content-between title-panel mb-4 slider-title-desc-center">
                                    <h2 class="text-center h4 text-muted title-font">ورود کاربر</h2>
                                    <a href="">
                                        <img src="~/MainTemplate/assets/image/logo.png" class="auth-logo" alt="">
                                    </a>
                                </div>
                                <form id="form-auth" class="py-3" asp-controller="Account" asp-action="UserLogin" method="post">
                                    <div class="comment-item mb-3">
                                        <div class="mb-2">
                                            <input type="text" class="form-control" asp-for="Mobile">
                                            <label class="form-label label-float">
                                                شماره همراه
                                                <span class="text-info">یا</span>
                                                ایمیل
                                            </label>
                                        </div>
                                        <span></span>
                                    </div>
                                    <div class="comment-item mb-3 position-relative step-passwd" style="">
                                        <div class="mb-2">
                                            <input type="password" class="form-control" asp-for="Password">
                                            <label class="form-label label-float">
                                                رمز عبور
                                            </label>
                                            <div class="inline-btn-text">
                                                <a @* asp-controller="Account" asp-action="ForgetPassword" *@ class="btn border-0 main-color-three-bg text-black">
                                                    ورود با
                                                    پیامک
                                                </a>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="text-center mb-2">
                                        <button type="submit" class="btn main-color-two-bg text-white w-100 py-3">ورود</button>
                                    </div>
                                    <div class="text-center">
                                        <a type="submit" class="btn text-black w-100 py-3">حساب کاربری ندارید؟ ثبت نام</a>
                                    </div>
                                </form>
                            </div>
                            <p class="loginTermsDesc lh-lg mt-3">
                                با ورود و یا ثبت نام در آبتین شما <a class="underlined fw-bold" href="/rules/">
                                    شرایط و
                                    قوانین
                                </a> استفاده از سرویس‌های سایت آبتین و <a class="underlined fw-bold" href="/privacy-polices/">
                                    قوانین حریم
                                    خصوصی
                                </a> آن را می‌پذیرید.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
